@page "/kleur"
<h1>Kleur</h1>
<div class="mb-3 row mt-3">
    <label for="r" class="col-sm-1 col-form-label">Rood</label>
    <div class="col-sm-3">
        <input type="range" min="0" max="255" id="r" @bind="r" @bind:event="oninput"/>
    </div>
</div>
<div class="mb-3 row">
    <label for="g" class="col-sm-1 col-form-label">Groen</label>
    <div class="col-sm-3">
        <input type="range" min="0" max="255" id="g" @bind="g" @bind:event="oninput"/>
    </div>
</div>
<div class="mb-3 row">
    <label for="b" class="col-sm-1 col-form-label">Blauw</label>
    <div class="col-sm-3">
        <input type="range" min="0" max="255" id="b" @bind="b" @bind:event="oninput"/>
    </div>
</div>
<div class="form-group row mt-3">
    <div class="col-sm-4 ms-3" style="background-color:rgb(@r,@g,@b);height:50px;border-radius: 10px;" />
    <label class="col-sm-1 col-form-label">#@HexColor()</label>
</div>

@code {
    private byte r = 0;
    private byte g = 0;
    private byte b = 0;
    private string HexColor()
    {
        return (r.ToString("X2") + g.ToString("X2") + b.ToString("X2"));
    }
}