@page "/events"
<h1>Events</h1>
<div style="width:400px;height:400px;background-color:lightblue;border-style:solid;"
     @onmousemove="ToonCoord" @onclick="e => counter = e.Detail"></div>
<div style="margin-top:20px;">
    <p>X : @x</p>
    <p>Y : @y</p>
    <p>clicks : @counter</p>
</div>

<hr />
Klinker :
<input @bind="input" @onkeypress="CheckInput" @onkeypress:preventDefault
       size="1" />

<hr />
<div @onclick="BuitensteDiv" @onclick:stopPropagation class="mt-4"
     style="padding:30px;background-color:cornflowerblue;border-style:solid;">
    <h1>Buitenste div</h1>
    <div @onclick="MiddensteDiv" @onclick:stopPropagation class="m-3"
         style="padding:30px;background-color:lightblue;border-style:solid;">
        <h2>Middenste div</h2>
        <div @onclick="BinnensteDiv" @onclick:stopPropagation class="m-3"
             style="padding:30px;background-color:azure;border-style:solid;">
            <h3>Binnenste div</h3>
        </div>
    </div>
</div>
<div class="mt-3 mb-3">
    <h5>Volgorde : @propagation</h5>
    <button class="btn btn-primary ml-2" @onclick="Wis">Wis output</button>
</div>

@code {
    double x;
    double y;
    double counter;
    private void ToonCoord(MouseEventArgs e)
    {
        x = e.ClientX;
        y = e.ClientY;
    }

        string? input;
        private void CheckInput(KeyboardEventArgs e)
        {
            string toets = e.Key;
            switch (toets)
            {
                case "a":
                case "e":
                case "i":
                case "o":
                case "u":
                case "y":
                    input = toets;
                    break;
            }
        }

    private string? propagation;
    private void BuitensteDiv() { propagation += "buitenste "; }
    private void MiddensteDiv() { propagation += "middenste "; }
    private void BinnensteDiv() { propagation += "binnenste "; }
    private void Wis() { propagation = ""; }

}
